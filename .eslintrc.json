{
    "env": {
        "browser": true,
        "commonjs": true,
        "es6": true
    },
    "extends": "eslint:recommended",
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018
    },
    "rules": {
        "linebreak-style": "off",
        "no-unused-vars": "warn",
        "no-useless-escape": "warn",
        "no-use-before-define": "error",
        "comma-dangle": [
          "error",
          "always-multiline"
        ],
        "semi": "error",
        "indent": [
          "error",
          2,
          {
            "SwitchCase": 1
          }
        ],
        "quotes": [
          "error",
          "single"
        ]
      }
}